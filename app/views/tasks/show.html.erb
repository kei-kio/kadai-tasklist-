<h1>id: <%= @task.id %>の詳細</h1>


<% if logged_in? %>
  <p>ステータス : <%= @task.status %></p>
  <p>タスク内容 : <%= @task.content %></p>
  <%= link_to '一覧に戻る', tasks_path %>
  <%= link_to "タスクの編集",edit_task_path(@task) %>
  <%= link_to "タスクの削除",@task, method: :delete,data: {confirm: "本当に削除しますか?"} %>

<% else %>
  
  <%= render "sessions/new" %>
<% end %>
